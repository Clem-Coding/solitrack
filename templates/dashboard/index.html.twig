{% extends 'base.html.twig' %}

{% block title %}
  Le Tableau de bord
{% endblock %}

{% block content %}
  <h1>Le tableau de bord</h1>

  <div class="sections-container">
    <section class="card">
      <h2>Nombre de visiteurs</h2>

      {{ form_start(form) }}
      {{ form_errors(form) }}
      {{ form_row(form.date) }}
      {{ form_row(form.count) }}
      <button type="submit" class="button-primary">Valider</button>
      {{ form_end(form) }}
      <div>{% include 'partials/flash.html.twig' %}</div>
    </section>
    <section class="card">
      <h2>Carte des visiteurs</h2>
      <div id="map" class="map-viewer"></div>
      <div id="points-data" style="display: none;">{{ points|json_encode|raw }}</div>
    </section>
    <section class="card">
      Lorem ipsum dolor sit amet, consectetur adipisicing elit. Modi, laudantium asperiores iure suscipit facere
      deserunt non, in magnam commodi distinctio voluptatibus officia molestias aut mollitia molestiae autem nostrum
      assumenda quasi!
    </section>
  </div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('js/visitors-map.js') }}"></script>
  <script
    src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
    integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
    crossorigin=""
  ></script>
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
{% endblock %}
