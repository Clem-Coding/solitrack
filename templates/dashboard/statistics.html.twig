{% extends 'base.html.twig' %}

{% block body %}
  <h1>Statistiques</h1>

  {# prettier-ignore-start #}
  <ul class="sidebar">
    <li><a href="{{ path('app_dashboard_statistics', {'category': 'all-items'}) }}">Articles</a></li>
    <li><a href="{{ path('app_dashboard_statistics', {'category': 'vetements'}) }}">Vêtements</a></li>
    <li><a href="{{ path('app_dashboard_statistics', {'category': 'ventes'}) }}">Ventes</a></li>
    <li><a href="{{ path('app_dashboard_statistics', {'category': 'visiteurs'}) }}">Visiteurs</a></li>
  </ul>
  {# prettier-ignore-end #}

  <section class="content">
    {% block category_graph %}
      <!-- Afficher le graphique ici en fonction de la catégorie -->
      {% if category == 'all-items' %}
        <h2>Tous les articles</h2>
        <!-- Graphique spécifique aux articles -->
      {% elseif category == 'vetements' %}
        <h2>Les vêtements</h2>
        <!-- Graphique spécifique aux vêtements -->
      {% elseif category == 'ventes' %}
        <h2>Les ventes</h2>
        <!-- Graphique spécifique aux ventes -->
      {% elseif category == 'visiteurs' %}
        <h2>Les visiteurs</h2>
        <!-- Graphique spécifique aux visiteurs -->
      {% endif %}
    {% endblock %}
  </section>

  {# PREMIER FILTRE #}

  {% if category == 'all-items' %}
    <label for="select-items">Sélectionner une catégorie</label>
    <select id="select-items" name="item">
      <option value="item1">Articles entrants</option>
      <option value="item2">Articles sortants</option>
      <option value="item3">Articles entrants et sortants</option>
    </select>
  {% elseif category == 'vetements' %}
    <label for="select-clothing">Sélectionner une catégorie</label>
    <select id="select-clothing" name="clothing">
      <option value="clothing1">Vêtements entrants</option>
      <option value="clothing2">Vêtements sortants</option>
      <option value="clothing3">Vêtements entrants et sortants</option>
    </select>
  {% elseif category == 'ventes' %}
    <label for="select-sales">Sélectionner une catégorie</label>
    <select id="select-sales" name="sale">
      <option value="sale1">Chiffre des ventes</option>
      <option value="sale2">Chiffre du bar</option>
      <option value="sale3">Chiffre des montants prix libre</option>
    </select>
  {% endif %}

  {# DEUXIEME FILTRE #}

  <label for="filter-period" class="hidden">Sélectionner une période</label>
  <select id="filter-period">
    <option value="monthly">Total mensuel sur un an</option>
    <option value="daily">Total journalier</option>
    <option value="yearly">Total annuel</option>
  </select>

  {# TROISIEME FILTRE #}

  <div id="date-picker" style="display: none;">
    <label for="date" class="hidden">Sélectionner une date</label>
    <input type="date" id="date" />
  </div>

  <div id="month-picker">
    <label for="year">Sélectionner une année</label>
    <select id="year">
      {% for year in years %}
        <option value="{{ year }}">{{ year }}</option>
      {% endfor %}
    </select>
  </div>

  {# <div style="width: 800px;"><canvas id="acquisitions"></canvas></div> #}

  <!-- Filtres -->
  {# <div>
    <select id="filter-movement">
      <option value="incoming">Articles Entrants</option>
