{% extends 'base.html.twig' %}

{% block title %}
  Mon planing de bénévolat
{% endblock %}

{% block content %}
  <h1>Mon planning de bénévolat</h1>

  {% if upcoming_registrations is empty %}
    <p>Vous n'avez aucune inscription à venir.</p>
  {% else %}
    <section class="card contained">
      <h2>Mes inscriptions à venir</h2>
      <ul class="volunteer-list">
        {% for registration in upcoming_registrations %}
          <li class="volunteer-item">
            <span class="session-title">{{ registration.session.title }}</span>
            <span class="session-datetime">
              {{ registration.session.startDatetime ? registration.session.startDatetime|date('d/m/Y H:i') : 'N/A' }}
              -
              {{ registration.session.endDatetime ? registration.session.endDatetime|date('d/m/Y H:i') : 'N/A' }}
            </span>
            <form
              method="post"
              action="{{
              path(
                'app_volunteer_registration_cancel',
                {
                  id: registration.id
                }
              )
              }}"
            >
              <button type="submit" class="btn btn-danger">Annuler l'inscription</button>
            </form>
          </li>
        {% endfor %}
      </ul>
    </section>
  {% endif %}
{% endblock %}
