{% extends 'base.html.twig' %}

{% block title %}Mon compte
{% endblock %}

{% block body %}
	<h1 class="text-center my-4">Modifier mes informations</h1>

	<section id="about">
		<div class="container mt-5">
			<div
				class="row justify-content-center">
				<!-- Colonne de taille fixée pour garder de l'espace sur les côtés -->
				<div class="col-lg-6 col-md-8 col-sm-10 mx-auto">

					{{ form_errors(form) }}

					{{ form_start(form) }}


					{{ form_row(form.firstName, {label: 'Prénom', attr: {'class': 'form-control'}}) }}


					{{ form_row(form.lastName, {label: 'Nom', attr: {'class': 'form-control'}}) }}


					{{ form_row(form.email, {label: 'Adresse email', attr: {'class': 'form-control'}}) }}

					{{ form_row(form.newPassword, {label: 'Modifier mon mot de passe', attr: {'class': 'form-control'}}) }}


					<button type="submit" class="btn btn-outline-primary">Enregistrer mes informations</button>

					{{ form_end(form) }}

				</div>
			</div>
		</div>
	</section>
{% endblock %}
