{% extends 'base.html.twig' %}

{% block title %}
  S'enregistrer
{% endblock %}

{% block content %}
  <h1>S'inscrire</h1>

  <section class="card-shadow auth" id="about">
    {{ form_start(registrationForm) }}

    <div class="form-group">
      {{ form_label(registrationForm.firstname) }}
      {{ form_widget(registrationForm.firstname) }}
      {% for error in registrationForm.firstname.vars.errors %}
        <p role="note" class="flash-error">{{ error.message }}</p>
      {% endfor %}
    </div>

    <div class="form-group">
      {{ form_label(registrationForm.lastname) }}
      {{ form_widget(registrationForm.lastname) }}
      {% for error in registrationForm.lastname.vars.errors %}
        <p role="note" class="flash-error">{{ error.message }}</p>
      {% endfor %}
    </div>

    <div class="form-group">
      {{ form_label(registrationForm.email) }}
      {{ form_widget(registrationForm.email) }}
      {% for error in registrationForm.email.vars.errors %}
        <p role="note" class="flash-error">{{ error.message }}</p>
      {% endfor %}
    </div>

    <div class="form-group">
      {{ form_label(registrationForm.plainPassword) }}
      <div class="password-container">
        {{ form_widget(registrationForm.plainPassword) }}
        <i class="ph ph-eye toggle-password"></i>
      </div>
      {% for error in registrationForm.plainPassword.vars.errors %}
        <p role="note" class="flash-error">{{ error.message }}</p>
      {% endfor %}
    </div>

    <button type="submit" class="button-primary">Cr√©er mon compte</button>

    {{ form_end(registrationForm) }}
  </section>

  {% include 'partials/flash.html.twig' %}
{% endblock %}
